<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TextFieldsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EditText Básico:"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editTextBasic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escribe algo aquí (básico)"
            android:inputType="text"
            android:importantForAutofill="no"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EditText Interactivo:"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editTextInteractive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escribe para la demo interactiva"
            android:inputType="text"
            android:importantForAutofill="no"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextInputLayout para Email:"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutEmail"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo Electrónico"
            android:layout_marginBottom="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/buttonShowTextAndSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mostrar y Enviar Datos"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/textViewInteractiveResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="El texto aparecerá aquí..."
            android:textSize="16sp"
            android:padding="8dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView>
